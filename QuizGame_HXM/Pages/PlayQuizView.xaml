<UserControl x:Class="QuizGame_HXM.Pages.PlayQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGame_HXM.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Question + Answers -->
            <RowDefinition Height="Auto"/>
            <!-- Feedback + Next -->
            <RowDefinition Height="Auto"/>
            <!-- Score -->
        </Grid.RowDefinitions>

        <!-- Title and Back button -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Quiz.Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.ColumnSpan="2"/>

            <Button Content="Back to Menu"
                    Width="100" Height="30"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding BackCommand}"
                    Grid.Column="1"/>
        </Grid>

        <!-- Question and Answers -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,10, 0, 10">

            <TextBlock Text="{Binding QuestionText}"
                       FontSize="18"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0, 10"/>

            <Button Content="{Binding Answer1}"
                    Height="20" Width="220" Margin="0"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="0"
                    IsEnabled="{Binding IsAnswerSelected, Converter={StaticResource InverseBoolConverter}}" />

            <Button Content="{Binding Answer2}"
                    Height="20" Width="220" Margin="0"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="1"
                    IsEnabled="{Binding IsAnswerSelected, Converter={StaticResource InverseBoolConverter}}" />

            <Button Content="{Binding Answer3}"
                    Height="20" Width="220" Margin="0"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="2"
                    IsEnabled="{Binding IsAnswerSelected, Converter={StaticResource InverseBoolConverter}}" />
        </StackPanel>

        <!-- Feedback + Next button -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,10">

            <TextBlock Text="{Binding FeedbackMessage}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,5"
                       Foreground="{Binding FeedbackColor}"
                       TextAlignment="Center"/>

            <Button Content="Next Question"
                    Height="20" Width="160" Margin="0,10,0,0"
                    Command="{Binding NextCommand}"
                    IsEnabled="{Binding IsAnswerSelected}" />
        </StackPanel>

        <!-- Score -->
        <TextBlock Grid.Row="3"
                   Text="{Binding ScoreText}"
                   FontWeight="Bold"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
    </Grid>
</UserControl>
